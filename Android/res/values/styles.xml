<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Mintzatu" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar">
        <item name="indeterminateProgressStyle">@style/IndeterminateProgress</item>
        <item name="titleTextStyle">@style/Mintzatu.ActionBar.TitleTextStyle</item>
        <item name="background">@drawable/actionbar_background</item>
    </style>

    <style name="IndeterminateProgress" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/progress_small_holo</item>
    </style>

    <style name="Mintzatu.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button">
        <item name="android:minWidth">150dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ButtonSmall">
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ButtonBlue" parent="@style/Button">
        <item name="android:background">@color/button_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonBeige" parent="@style/Button">
        <item name="android:background">@color/button_beige</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonSmallBlue" parent="@style/ButtonSmall">
        <item name="android:background">@color/button_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonSmallBeige" parent="@style/ButtonSmall">
        <item name="android:background">@color/button_beige</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonBlack" parent="@style/Button">
        <item name="android:background">@color/button_beige</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AvatarProfile">
        <item name="android:minWidth">50dp</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="ProfileItem">
        <item name="android:textColor">@color/beige_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="nameTitle">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="normalText">
        <item name="android:textColor">@color/beige_text</item>
    </style>

</resources>